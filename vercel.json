{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 1024
      }
    }
  ],
  "routes": [
    {
      "src": "/api/compress",
      "dest": "/api/compress.js"
    },
    {
      "src": "/api/upload-font",
      "dest": "/api/upload-font.js"
    }
  ]
}